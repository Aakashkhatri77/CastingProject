@model CastingProject.Models.MailMessage


<hr />
<div class="row">
    <form class="uk-grid-small" uk-grid asp-action="send">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="uk-width-1-1@s">
            <input class="uk-input" asp-for="To" placeholder="Your Email" required>
        </div>
        <div class="uk-width-1-1@s">
            <input class="uk-input" asp-for="Subject" placeholder="Subject" required>
        </div>
        <div class="uk-width-1-1@s">
            <textarea class="uk-textarea" asp-for="Body" rows="5" placeholder="Message*" required></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="send" class="btn btn-primary"/>
        </div>
    </form>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
@model IEnumerable<Blogs>;




@*Blogs section*@

<h2 class="uk-margin-medium-left" style="margin-bottom:-40px; margin-top:20px;">Blogs</h2>
<div class="uk-grid-small uk-child-width-expand@s uk-margin-top uk-padding" uk-grid>

   @foreach(var item in Model)
   {
        <div>
        <div class="uk-card uk-card-default" style="border-radius:6px; ">
            <div class="uk-card-media-top card-img">
                <img src="@(ImageSize.Get(item.Picture,"medium"))" alt="" style="border-radius: 6px 6px 0px 0px; object-fit:cover">
            </div>
            <div class="uk-card-body">
                <h3 class="uk-card-title">@item.Title</h3>
                <p>@item.HighlightLine</p>
            </div>
        </div>
    </div>
   }
</div>

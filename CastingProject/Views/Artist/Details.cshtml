@model CastingProject.Models.Artist

@{
    ViewData["Title"] = "Details";
    var Age = int.Parse(DateTime.Now.ToString("yyyy")) - int.Parse(@Model.DOB.ToString("yyyy"));
}

<div style="min-height:100vh;">

    <div class="float-btn">
        <a asp-action="Edit" asp-controller="Artist" asp-route-id="@Model.Id" class="Create-btn">
            <i id="my-float" uk-icon="icon: file-edit"></i>
        </a>
    </div>

    <div class="uk-child-width-expand@s uk-margin-large-left uk-margin-large-right uk-margin-top" uk-grid>
        <div class="uk-width-auto">
            <img id="main-cover" src="~/@Model.Dp" />
        </div>
        <div class="uk-width-expand">
            <h3 class="uk-card-title uk-margin-remove-bottom">@Model.Name</h3>
            <p class="uk-text-meta uk-margin-remove-top"> @Model.DOB.ToString("MMMMM yyyy")</p>
        </div>
    </div>

    <div class="uk-child-width-expand@s uk-margin-large-left uk-margin-large-right" uk-grid>
        <div class="uk-width-1-2">
                <h4>Photos</h4>
                <img src="~/@Model.Dp" alt="dp" />

            <div class="uk-grid-small uk-child-width-1-3 uk-margin-small-top uk-text-center" uk-grid>
        @foreach (var item in Model.ArtistGalleries)
        {
            <div class="uk-margin-remove">
                <div class="for-img uk-inline-clip uk-transition-toggle talent-image" tabindex="0">
                    <div class="content uk-margin-remove" uk-lightbox="animation: scale">
                        <a class="uk-inline" href="~/@item.Gallery" target="_blank">
                            <img src="~/@item.Gallery" class="uk-transition-scale-up uk-transition-opaque" alt="">
                        </a>
                    </div>
                    <a onclick="Confirm()" asp-action="DeleteGallery" asp-controller="Artist" asp-route-id="@item.Id">
                        <i id="close" uk-icon="icon: close"></i>
                    </a>
                </div>
            </div>
        }
    </div>
        </div>

        <div>
            <div>
                <dl class="uk-description-list uk-description-list-divider">
                    <dt><strong>Age</strong></dt>
                    <dd>@Age</dd>

                    <dt><strong>Category</strong></dt>
                    <dd>@Model.Category.Name</dd>

                    <dt><strong>Attributes</strong></dt>
                    <dd>Height: @Model.Height</dd>
                    <dd>Weight: @Model.Weight </dd>
                    <dd>Skin Color: @Model.Skin_Color</dd>
                    <dd>Eye Color: @Model.Eye_Color</dd>
                    <dd>Hair Color: @Model.Hair_Color</dd>
                    <dd>Skin Type: @Model.Skin_Type</dd>
                    <dd>Hair Length: @Model.Hair_Length</dd>
                    <dd>Hair Type: @Model.Hair_Type</dd>

                    <dt><strong>Skills</strong></dt>
                    <div class="tagStyle">
                        <span>
                            @string.Join('/',Model.ArtistSkills.Select(x=>x.Skill.Name))
                        </span>
                    </div>

                    <dt><strong>Roles</strong></dt>
                    <div class="tagStyle">
                        <span>
                            @string.Join('/',Model.ArtistRoles.Select(x=>x.Role.Name))
                        </span>
                    </div>

                    <dt><strong>Hobbies</strong></dt>
                    <div class="tagStyle">
                        <span>
                            @string.Join('/',Model.ArtistHobbies.Select(x=>x.Hobby.Name))
                        </span>
                    </div>
                    <dt><strong>View Gallery</strong></dt>
                    <dd class="image-btn"><a class="btn uk-botton uk-button-primary" asp-action="GalleryIndex" asp-controller="Artist" asp-route-id="@Model.Id">View</a></dd>
                    <dd class="image-btn"><a class="btn uk-botton uk-button-primary" asp-action="send" asp-controller="Email" asp-route-id="@Model.Id">Contact</a></dd>
                </dl>
            </div>
        </div>

    </div>




</div>

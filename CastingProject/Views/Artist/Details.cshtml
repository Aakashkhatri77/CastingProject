                        dipiscing elit, sed do eiusmod tempor incididunt.
                    </p>
                </div>
            </div>
            <div class="uk-width-1-3@s">
                <div class="about-me">
                    <img src="@(CastingProject.Helper.ImageSize.Get(Model.Dp ,"fullscreen"))" alt="">

                </div>
            </div>
        </div>


        <h3 class="uk-margin-medium-right uk-margin-medium-left" style="margin-top:70px;">Talents And Interests </h3>
        <div class="uk-child-width-expand@s uk-text-center uk-margin-medium-right uk-margin-medium-left uk-margin-large-bottom skills" uk-grid style="height:300px;">

            <div class="uk-card uk-card-default uk-margin-right uk-card-body artistInterest-card">
                <h3 style="margin:0 0 28px 0 ;"> Roles</h3>
                @foreach (var item in Model.ArtistRoles)
                {
                    <div class='artist-talents' style="display:inline-block; text-align:center;">
                        <span> @item.Role.Name</span>
                    </div>
                }
            </div>
            <div class="uk-card uk-card-default  uk-margin-right uk-card-body artistInterest-card">
                <h3 style="margin:0 0 28px 0;"> Skills</h3>
                @foreach (var item in Model.ArtistSkills)
                {
                    <div class='artist-talents' style="display:inline-block; text-align:center;">
                        <span> @item.Skill.Name</span>
                    </div>
                }
            </div>
            <div class="uk-card uk-card-default uk-card-body artistInterest-card">
                <h3 style="margin:0 0 28px 0;"> Hobbies</h3>
                @foreach (var item in Model.ArtistHobbies)
                {
                    <div class='artist-talents' style="display:inline-block; text-align:center;">
                        <span> @item.Hobby.Name</span>
                    </div>
                }
            </div>
        </div>





        <div class="uk-margin-medium-right uk-margin-medium-left">
            <h3 style="margin-top:70px;">Introduction Video</h3>
            <iframe src="https://www.youtube-nocookie.com/embed/c2pz2mlSfXA?autoplay=0&amp;showinfo=0&amp;rel=0&amp;modestbranding=1&amp;playsinline=1" width="1920" height="1080" allowfullscreen uk-responsive uk-video="automute: true"></iframe>
        </div>

        <div class="uk-margin-medium-left uk-margin-medium-right uk-margin-top uk-margin-bottom" uk-margin>
            <h3 style="margin-top:70px;">Photos</h3>
            <div class="uk-grid-small uk-child-width-1-3@s uk-text-center" uk-grid uk-lightbox="animation: slide">
                @foreach (var item in Model.ArtistGalleries)
                {
                    <div class="artist-image">
                        <div class="for-img uk-inline-clip uk-transition-toggle artist-image" tabindex="0">
                            <div class="artist-content uk-margin-remove">
                                <a class="uk-inline" href="@(CastingProject.Helper.ImageSize.Get(item.Gallery, "fullscreen"))" target="_blank">
                                    <img src="@(CastingProject.Helper.ImageSize.Get(item.Gallery, "medium"))" class="uk-transition-scale-up uk-transition-opaque" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <dd class="image-btn"><a class="btn uk-botton uk-button-primary" asp-action="GalleryIndex" asp-controller="Artist" asp-route-id="@Model.Id">View</a></dd>

               @await Component.InvokeAsync("Artist");

    </div>
</div>






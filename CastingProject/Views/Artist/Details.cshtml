                <div class="">@Model.Hair_Type</div>
            </div>
            <div class="attribute">
                <div>

                    <span>Hair Length</span>
                </div>
                <div class="">@Model.Hair_Length</div>
            </div>
            <div class="attribute">
                <div>

                    <span>Eye Color</span>
                </div>
                <div class="">@Model.Eye_Color</div>
            </div>
            <div class="attribute">
                <div>

                    <span>Hair-Type</span>
                </div>
                <div class="">@Model.Hair_Type</div>
            </div>
        </div>


        <div class="uk-child-width-expand@s uk-grid-collapse uk-card aboutme-card" uk-grid style="margin-top:70px; height:500px;">
            <div>
                <div class="uk-card-body aboutme-title">

@model CastingProject.Models.Blogs

@{
    ViewData["Title"] = "Details";
}



<div class="uk-child-width-expand uk-margin-medium-left uk-margin-medium-right uk-margin-top" uk-grid style="min-height:100vh;">
    <div class="uk-padding">
        <h1>@Model.Title</h1>
        <span>Published Date: @Model.PublishDate.ToString("yyyy-MMM-dd")</span>
        <div>
            <img src="@(ImageSize.Get(Model.Picture, "fullscreen"))"/>
            <p>@Html.Raw(Model.Content)</p>
        </div>
   
        
    </div>
    <div class="uk-width-1-3">
    </div>
</div>







































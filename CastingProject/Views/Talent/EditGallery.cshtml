@model IEnumerable<CastingProject.Models.TalentProfile>

@{
    ViewData["Title"] = "EditGallery";
}

<h1>EditGallery</h1>

<p>
    <a asp-action="Create">Upload Image</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Talent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>
               <img src="~/@item.ProfileName" width="100px" height="100px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Talent.Id)
            </td>
            <td>
                
                <a asp-action="DeleteGallery" asp-controller="Talent" class="btn btn-danger" onclick="Confirmation()" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function Confirmation() {
  confirm("Are you sure! you want to delete?");
}
</script>